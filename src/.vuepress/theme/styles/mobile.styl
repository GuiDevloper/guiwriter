@require './variables'

.vp-sidebar
  top 0
  padding-top $navbarHeight
  // transform translateX(-100%) !important
  // display block !important
.page
  padding-left 0
.vp-theme-container
  &.sidebar-open
    .vp-sidebar
      // transform translateX(0) !important
      // display block !important
  &.no-navbar
    .vp-sidebar
      padding-top: 0
  &.no-sidebar
    .vp-sidebar
      display block !important

// narrow mobile
@media (max-width: $MQMobileNarrow)
  h1
    font-size 1.6rem
  {$contentClass}
    div[class*="language-"]
      margin 0.85rem -1.5rem
      border-radius 0

// mobile
@media (max-width: $MQMobile)
  // put sidebarToggle on right
  .vp-navbar,
  .vp-navbar-items-wrapper
    padding-inline-start 1rem !important
    padding-inline-end 2.5rem !important
  .vp-toggle-sidebar-button
    inset-inline-start unset !important
    inset-inline-end 1rem !important
    filter opacity(0.7)
    z-index 10
  // fix search suggestions more on right
  .suggestions
    position fixed !important
    right 1rem !important
  /*
  // could set navbar to bottom (need update all margin)
  .vp-navbar
    bottom 0
    top unset
  */

// bigger than mobile
@media (min-width: $MQMobile)
  .vp-home, .blog-list, .vp-page
    padding-inline-start var(--sidebar-width) !important
